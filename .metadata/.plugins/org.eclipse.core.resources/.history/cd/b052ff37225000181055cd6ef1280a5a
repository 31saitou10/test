package com.internousdev.miami.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import com.internousdev.miami.util.DBConnector;
import com.internousdev.miami.util.DateUtil;

public class UserCreateCompleteDAO {
	private DBConnector dbConnector = new DBConnector();

	private Connection connection = dbConnector.getConnection();

	private DateUtil dateUtil = new DateUtil();

	private String sql="INSERT INTO user_info(family_name,first_name,family_name_kana,first_name_kana,sex,email,user_id,password,secret_question,secret_answer,regist_date) VALUES(?,?,?,?,?,?,?,?,?,?,?)";

	public void createUser(String familyname, String firstname, String familynamekana,String firstnamekana, int sex, String email,String userid, String password,  int secretquestion, String secretanswer) throws SQLException {

		try {
			 PreparedStatement ps = con.prepareStatement(sql);
			 ps.setString(1, familyname);
			 ps.setString(2, firstname);
			 ps.setString(3, familynamekana);
			 ps.setString(4, firstnamekana);
		     ps.setInt(5, sex);
			 ps.setString(6, email);
			 ps.setString(7, userid);
			 ps.setString(8, password);
			 ps.setInt(9, secretquestion);
			 ps.setString(10, secretanswer);
			 ps.setString(11, dateUtil.getDate());

			preparedStatement.execute();
		} catch(Exception e) {
			e.printStackTrace();
		} finally {
			connection.close();
		}
	}

}
